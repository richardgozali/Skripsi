<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints"
        app:layout_goneMarginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_foto_aktivitas_pelanggan"
                android:layout_width="119dp"
                android:layout_height="91dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_perm_identity_24"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/tv_aktivitas_pelanggan"
                android:layout_width="188dp"
                android:layout_height="38dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/anton"
                android:gravity="center"
                android:text="Sutejo"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_foto_aktivitas_pelanggan"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_aktivitas_status_pelanggan"
                android:layout_width="127dp"
                android:layout_height="14dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:gravity="center"
                android:text="Lokasi 7.2 KM"
                android:textAlignment="viewStart"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_foto_aktivitas_pelanggan"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_foto_aktivitas_detail_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_search_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>